{
    "name": "tbence94/php-sorting-analysis",
    "description": "Implement popular sorting algorithms in PHP and compare their performance.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "tbence94",
            "email": "tihanyibence@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "*",
        "phpunit/php-code-coverage": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "composer dumpautoload -o"
        ],
        "post-update-cmd": [
            "composer dumpautoload -o"
        ],
        "post-root-package-install": [
            "composer dumpautoload -o"
        ],
        "post-create-project-cmd": [
            "composer dumpautoload -o"
        ]
    }
}
